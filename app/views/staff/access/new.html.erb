<% title "Staff Login" %>

<div class="access login content">
  <%= form_tag(staff_access_path) do %>
    <fieldset class="border rounded basic-shadow  bg-white justify-content-center align-items-center container col-xl-4 col-md-6 col-sm-10 col-xs-12 border mt-5 p-4 signup">  
    <p class='text-center'>Staff Area</p>
    <div class='row'>
          <div class="form-label-group col-12">
            <%= email_field_tag(:email, params[:email], class: "form-control", placeholder: "Email", required:"", autocapitalize: "none", autofocus:"", autocomplete:"off") %>
            <%= label_tag('email', 'Email', class: "") %>
          </div>
      </div>

       <div class='row'>
          <div class="form-label-group col-12">
            <%= password_field_tag(:password, '', class: "form-control", placeholder: "Password", required:"", autofocus:"", autocomplete:"off") %>
            <%= label_tag('password', 'Password', class: "") %>
          </div>
      </div>

      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" name='remember_me' value="1">  Remember me
        </label>
    </div>


    <div class="actions">
      <%= button_tag(type: "submit", class: "btn btn-lg btn-primary btn-block col-md-12 text-light") do %>
          <i class="oi oi-lock-locked"></i> Log In
      <% end %>
      <hr />
     <p class='text-center my-2'> <%= link_to('I forgot my password', forgot_password_staff_access_path, :id => 'forgot-password', class: '') %></p> 
    </div>
  </fieldset>
  <% end %>
</div>