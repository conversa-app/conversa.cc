<% title "Delete Admin: #{@admin.full_name}" %>

<%= link_to('&laquo; Back to List'.html_safe, staff_admins_path, class: 'btn btn-primary btn-back') %>

<div class="admin delete">
  <p>Are you sure you want to <strong>permanently</strong> delete this admin?</p>
  
  <p class="item"><%= @admin.full_name %></p>
  
  <%= form_for([:staff, @admin], method: :delete) do %>
    <div id="operations">
      <%= submit_tag("Delete Admin", class: 'btn btn-primary btn-delete') %>
      <input type="button" value="Cancel" class="btn btn-default btn-cancel" onclick="window.location.href='<%= staff_admins_path %>';" />
    </div>
  <% end %>
</div>
