<% title "Admins" %>

<div class="admin listing">
  
  <%= link_to("Create New Admin", new_staff_admin_path, class: 'action btn btn-primary btn-new float-md-right') %>
  <span class="clearfix"></span>
  
  <table class="list table">
    <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    </thead>

    <% @admins.each do |admin| %>
    <tr id="admin-<%= admin.id %>">
      <td><%= admin.first_name %></td>
      <td><%= admin.last_name %></td>
      <td><%= admin.username %></td>
      <td><%= admin.email %></td>
      <td><%= link_to('Edit', edit_staff_admin_path(admin), class: 'btn btn-sm btn-edit') %></td>
      <td><%= link_to('Delete', delete_staff_admin_path(admin), class: 'btn btn-sm btn-delete') %></td>
    </tr>
    <% end %>
  </table>

  <%= will_paginate(@admins) %>
  
</div>
